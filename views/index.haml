!!! XML
%html
  %head
    %title glitchtweet
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/main.css", :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/fonts-3.1.1.css", :type => 'text/css'}
    %meta{:name => 'viewport', :content => 'width=device-width, user-scalable=no'}
    %link{:rel => 'apple-touch-icon', :href => "#{app_root}/img/icon.png"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.cookie.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/tiny_segmenter-0.1.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/glitchtext.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/iphone-shake-event.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/util.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/main.js"}
    %script{:type => 'text/javascript', :src => 'http://platform.twitter.com/widgets.js'}
    :javascript
      var app_root = "#{app_root}";
      var auth = #{auth?};
  %body
    %div#content
      %h1 glitchtweet
      %div#twitter
        %div#login
          - unless auth?
            %a [login twitter]
          - else
            %img{:src => session[:twitter_icon], :width => 24, :height => 24}
            %a{:href => "http://twitter.com/#{session[:twitter_name]}"}
              @#{session[:twitter_name]}
            &nbsp;|&nbsp;
            %a{:href => "#{app_root}/logout"} [logout]
      %div
        %textarea{:id => 'source'}
          ここに書いたテキストがglitchされます
      %div
        %div.button#glitch glitch
      %div
        %div#result
        %div#count
      %div#controls
        %div.button#tweet tweet
      %div#log
      %div#info
        %a{:id => 'info'} [?]
        %div#detail
          %ul
            %li
              by
              %a{:href => 'http://twitter.com/shokai'} @shokai [oʇoɯıɥsɐɥ oɥs]
            %li
              source code : 
              %a{:href => 'https://github.com/shokai/glitchtweet-web-app'} github
            %li
              %a{:href => 'http://twitter.com/share', :class => 'twitter-share-button',
                 'data-url' => 'http://glitchtweet.com', 'data-count' => 'horizontal',
                 'data-via' => 'shokai'}
                Tweet


